[init]
    templatedir = ~/.git_template
    defaultBranch = main
[user]
    email = santiago.gallego.rodrigo@gmail.com
    name = Santiago Gallego
[include]
    path = ~/.gitconfig_template
    path = ~/git/dotfiles/git/gitconfig_delta
[alias]
    # Improved aliases
    st = status -sb
    co = checkout
    br = branch
    ci = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am

    # Log aliases
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --graph --full-history --all --color --pretty=format:'%C(red)%h%x09%C(green)%d%C(white) %s %C(yellow)(%an)%Creset'
    ln = log --name-status --oneline

    # Diff aliases
    d = diff             # Use git diff with delta pager
    dt = difftool        # Use difftool (vimdiff) for side-by-side editing
    dn = diff --name-only # Show only filenames

    # Branch management
    b = log --graph --simplify-by-decoration --pretty=format:'%d' --all
    l = !git ll --simplify-by-decoration

    # Utility aliases
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

    # Push aliases
    pm = push origin HEAD:refs/for/master
    pp = push origin HEAD:refs/for/production
    fpush = push --force-with-lease origin

    # Sync with upstream
    pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"

    # Interactive rebase
    s = !git rebase -i $(git merge-base HEAD master)

    # Edit conflicted files
    e = !vim $(git status --porcelain | awk {'print $2'})

[core]
    excludesfile = ~/.gitignore_global
    autocrlf = false
    editor = vim
[credential]
    helper = cache --timeout=3600
[pull]
    rebase = true
[push]
    default = simple
    autoSetupRemote = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    conflictstyle = diff3
    tool = delta
